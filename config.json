{
    "name": "Font Fixing PDFix",
    "version": "v0.0.0",
    "actions": [
        {
            "title": "Fix Missing Unicode (PDFix)",
            "name": "pdfix_generate_missing_unicode",
            "desc": "Automatically generate missing unicode for character glyphs using PDFix SDK and OCR [Local]",
            "version": "v0.0.0",
            "icon": "font_missing_unicode",
            "category": "Fonts",
            "local": true,
            "program": "docker run -v \"${working_directory}:/data\" -w /data --rm pdfix/font-fix-pdfix:latest fix-missing-unicode --name \"${license_name}\" --key \"${license_key}\" -i \"/data/${input_pdf}\" -o \"/data/${output_pdf}\" --engine \"${engine}\" --default_char \"${default}\"",
            "args": [
                {
                    "name": "input_pdf",
                    "desc": "Input PDF file",
                    "flags": 2,
                    "type": "file_path",
                    "ext": "pdf",
                    "value": ""
                },
                {
                    "name": "output_pdf",
                    "desc": "Output PDF file",
                    "flags": 4,
                    "type": "file_path",
                    "ext": "pdf",
                    "value": ""
                },
                {
                    "title": "OCR engine",
                    "name": "engine",
                    "desc": "Which OCR engine will be used",
                    "type": "string",
                    "value": "Tesseract",
                    "set": [
                        {
                            "value": "Tesseract"
                        },
                        {
                            "value": "Easy"
                        },
                        {
                            "value": "Rapid"
                        }
                    ]
                },
                {
                    "title": "Default Character",
                    "name": "default",
                    "desc": "Which unicode character will be filled in when OCR fails",
                    "type": "string",
                    "value": " "
                }
            ],
            "errors": {
                "10": "Failed to parse arguments. Please check the usage and try again.",
                "11": "Input and output file must be PDF documents.",
                "20": "Failed to initialize PDFix SDK.",
                "21": "Failed to activate PDFix SDK acount.",
                "22": "Failed to authorize PDFix SDK acount.",
                "23": "Failed to render PDF Page into image.",
                "24": "Failed to open PDF document.",
                "25": "Failed to save PDF document."
            }
        }
    ]
}